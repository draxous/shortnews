<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:statusBarColor">@color/colorCardBackground</item>
        <item name="materialButtonStyle">@style/Widget.MyApp.MyButton</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/cold_start_splash</item>
    </style>

    <style name="TextAppearance.Text.Regular" parent="android:TextAppearance">
        <item name="fontPath">fonts/google-sans/ProductSans-Regular.ttf</item>
    </style>

    <style name="TextAppearance.Text.Bold" parent="android:TextAppearance">
        <item name="fontPath">fonts/google-sans/ProductSans-Bold.ttf</item>
    </style>

    <style name="TextAppearance.Text.Light" parent="android:TextAppearance">
        <item name="fontPath">fonts/google-sans/ProductSans-Light.ttf</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textColor">@color/black_effective</item>
    </style>


    <style name="TextStyle.Title" parent="TextStyle">
        <item name="android:textSize">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>


    <style name="TextStyle.Title.Sub.Bold" parent="TextStyle.Title">
        <item name="android:textAppearance">@style/TextAppearance.Text.Bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextStyle.Title.Sub.Small.Bold" parent="TextStyle.Title">
        <item name="android:textAppearance">@style/TextAppearance.Text.Bold</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="TextStyle.Title.Sub.Small" parent="TextStyle.Title">
        <item name="android:textAppearance">@style/TextAppearance.Text.Light</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextStyle.Card.Content" parent="TextStyle">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_xsmall</item>
        <item name="android:layout_marginRight">@dimen/margin_xsmall</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginStart">@dimen/marginStart</item>
        <item name="android:layout_marginEnd">@dimen/marginEnd</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/contentColor</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="TextStyle.Card.Header" parent="TextStyle">
        <item name="android:textSize">@dimen/font_medium_large</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_xsmall</item>
        <item name="android:layout_marginRight">@dimen/margin_xsmall</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:layout_marginStart">@dimen/marginStart</item>
        <item name="android:layout_marginEnd">@dimen/marginEnd</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/subHeadingColor</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="TextStyle.Card.Other" parent="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_xsmall</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/moreShortTextColor</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="layoutText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:layout_marginStart">@dimen/marginStart</item>
        <item name="android:layout_marginEnd">@dimen/marginEnd</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <!-- tabs styles -->

    <style name="TextStyle.Card.TabContent" parent="TextStyle.Card.Content">
        <item name="android:textSize">@dimen/font_medium_tab</item>
        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:layout_marginStart">@dimen/marginStart</item>
        <item name="android:layout_marginEnd">@dimen/marginEnd</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/contentColor</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="TextStyle.Card.TabHeader" parent="TextStyle.Card.Header">
        <item name="android:textSize">@dimen/font_medium_large_tab</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_xsmall</item>
        <item name="android:layout_marginRight">@dimen/margin_xsmall</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:layout_marginStart">@dimen/marginStart</item>
        <item name="android:layout_marginEnd">@dimen/marginEnd</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/subHeadingColor</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="TextStyle.Card.TabOther" parent="TextStyle.Card.Other">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_xsmall</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_small_tab</item>
        <item name="android:textColor">@color/moreShortTextColor</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="layoutTextTab" parent="layoutText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:layout_marginStart">@dimen/marginStart</item>
        <item name="android:layout_marginEnd">@dimen/marginEnd</item>
        <item name="android:textSize">@dimen/font_small_tab</item>
    </style>

    <style name="Widget.MyApp.MyButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
    </style>


    <style name="TextStyle.TabTitle" parent="TextStyle">
        <item name="android:textSize">@dimen/font_medium_tab</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="TextStyle.TabTitle.Sub.Bold" parent="TextStyle.Title">
        <item name="android:textAppearance">@style/TextAppearance.Text.Bold</item>
        <item name="android:textSize">@dimen/font_small_tab</item>
    </style>

    <style name="TextStyle.TabTitle.Sub.Small.Bold" parent="TextStyle.Title">
        <item name="android:textAppearance">@style/TextAppearance.Text.Bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextStyle.TabTitle.Sub.Small" parent="TextStyle.Title">
        <item name="android:textAppearance">@style/TextAppearance.Text.Light</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- progress in home feed  -->

    <style name="Widget.MaterialProgressBar.ProgressBar.HomeFeed">
        <item name="android:minWidth">24dp</item>
        <item name="android:maxWidth">24dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>
</resources>
